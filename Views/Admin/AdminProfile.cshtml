@{
    Layout = "~/Views/Shared/_LayoutLoggedInAdmin.cshtml";
}

<title>Admin Profile</title>
<div class="back-link"><p>&lt;BACK</p></div>

@using TigerPadG4.Data

@model UserProfile

<!--START OF PROFILE CONTAINER-->
<div class="user-profile-container">
    <!--START OF PROFILE PHOTO CONTAINER-->
    <div class="profile-photo-container">
        <div><img src="~/images/user-profile.png" /></div>
        <div class="department-text">
            <p>INFORMATION<br />TECHNOLOGY</p>
        </div>
    </div>
    <!-- END OF PROFILE PHOTO CONTAINER -->
    <div class="profile-description">
        <div class="myprofile-name">
            <p>@Model.Name</p>
        </div>
        <div class="myprofile-username">
            <p>&#64;@Model.Username</p>
        </div>
        <hr class="profile-divider" />
        <div class="bio-text">
            <p>BIO</p>
        </div>
        <div class="myprofile-bio">
            <p>
                @Model.Bio
            </p>
        </div>

        <div class="edit-profile-btn-container">
            <form asp-controller="User" asp-action="EditUserProfile" method="get">
                <button type="submit" class="edit-profile-btn">EDIT PROFILE</button>
            </form>
        </div>

    </div>
    <!-- END OF PROFILE CONTAINER-->
</div>