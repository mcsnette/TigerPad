        </div>

        <!-- END OF POSTS-->
        <div class="inq-middle-end-post">
            <p>You've reached the end. Wait for new questions.</p>
        </div>
    </div>
    <!--==================RIGHT SIDE=======================-->
    <div class="inq-admin-right-container">
        <div class="quote-text"><p>Quote of the Day</p></div>
        <div class="quote-content" id="quote-content">
            <p>
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla
                varius elementum nisl? Vel ullamcorper eros auctor sed"
            </p>
        </div>
        <button class="admin-edit-quote-btn" onclick="showEditModal()">EDIT QUOTE</button>

        <!--EDIT QUOTE POP UP MODAL-->
        <div class="modal-quote" id="editModal">
            <div class="modal-content-quote">
                <p>Edit Quote of the Day</p>
                <textarea id="newQuote" rows="2" cols="20" class="newQuote"></textarea><br>
                <button onclick="saveEdit()" class="modal-delete-btn">Save</button>
                <button onclick="cancelEdit()" class="modal-cancel-btn">Cancel</button>
            </div>
        </div>

        <!-- DELETE POST POP UP MODAL -->
        <div class="modal" id="deleteModal">
            <div class="modal-content">
                <p>Are you sure you want to delete this?</p>
                <button onclick="deleteItem()" class="modal-delete-btn">Delete</button>
                <button onclick="closeModal()" class="modal-cancel-btn">Cancel</button>
            </div>
        </div>

    </div>

    <!--END OF RIGHT SIDE-->
</div>
<!-- END OF MAIN CONTAINER-->

<script>

    // DELETE POST //
    function showModal() {
        var modal = document.getElementById('deleteModal');
        modal.style.display = 'flex';
    }

    function closeModal() {
        var modal = document.getElementById('deleteModal');
        modal.style.display = 'none';
    }

    function deleteItem() {
        // DELETE HERE
        alert('Post deleted!');
        closeModal();
    }

    // EDIT QUOTE OF THE DAY //

    // Function to show the edit modal
    function showEditModal() {
        var modal = document.getElementById('editModal');
        modal.style.display = 'flex';
    }

    // Function to save the edited content
    function saveEdit() {
        var modal = document.getElementById('editModal');
        var contentQuote = document.getElementById('quote-content');
        var newQuote = document.getElementById('newQuote');

        // Update the content with the edited text
        contentQuote.innerHTML = '<p>' + newQuote.value + '</p>';

        // Close modal
        modal.style.display = 'none';
    }

    // Cancel edit
    function cancelEdit() {
        var modal = document.getElementById('editModal');
        modal.style.display = 'none';
    }
</script>

