@using TigerPadG4.Data

@model UserProfile

@{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<title>Edit Profile</title>
<!--START OF PROFILE CONTAINER-->
<div class="edituser-profile-container">
    <!--START OF PROFILE PHOTO CONTAINER-->
    <div class="editprofile-photo-container">
        <!-- ... (previous content) ... -->
    </div>
    <!-- END OF PROFILE PHOTO CONTAINER -->
    <div class="editprofile-description">
        <div class="editprofile-description-inner">
            <div class="account-details-text">
                <p>Account Details</p>
            </div>

            <form asp-action="SaveChanges" method="post">

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <p style="text-align: center; color: red">Username already exists. Please choose a different one.</p>
                      
                    </div>

                }



                <div class="name-label">
                    <p>NAME</p>
                </div>
                <div class="edit-profile-form">
                    <input asp-for="Name" class="edit-profile-field" required />
                </div>

                <div class="name-label">
                    <p>USERNAME</p>
                </div>
                <div class="edit-profile-form">
                    <input asp-for="Username" class="edit-profile-field" required />
                </div>

                <div class="name-label">
                    <p>BIO</p>
                </div>
                <div class="edit-profile-form">
                    <input asp-for="Bio" class="edit-profile-field" required />
                </div>

                <div class="name-label">
                    <p>CICS PROGRAM</p>
                </div>
                <div class="edit-profile-form">
                    <select asp-for="CicsProgram" class="edit-profile-field" asp-items="Html.GetEnumSelectList<CicsProgram>()" required>
                        <!-- Enum values will be automatically populated here -->
                    </select>
                </div>

                <div class="edit-profile-btn-container">
             
                        <button type="submit" class="save-changes-btn">SAVE CHANGES</button>
                        <button asp-controller="User" asp-action="Cancel" class="cancel-btn">CANCEL</button>
                    </form>
                </div>
        </div>
    </div>
    <!-- END OF PROFILE CONTAINER-->
</div>

