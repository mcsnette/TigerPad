@{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


@using TigerPadG4.ViewModel
@model UserHomepageViewModel;


<!--MAIN CONTAINER-->
<div class="user-inquiries-container">
    <!--==================LEFT SIDE=======================-->
    <div class="user-inq-left-container">
        <div class="inq-left-profile">
            <div class="inq-user-profile-photo">
                <img src="~/images/profile-3.jpg" />
            </div>
            <div class="inq-user-profile-name">
                <p>@Model.UserProfile.Name</p>
                <p>&#64;@Model.UserProfile.Username</p>
            </div>
        </div>

        <div class="inq-left-sidebar">
            <a asp-controller="User" asp-action="UserHomepage" class="inq-sidebar-item">
                <span><i class="uil uil-house-user"></i></span>
                <h3>Home</h3>
            </a>
            <a asp-controller="User" asp-action="UserInquiries" class="inq-sidebar-item active">
                <span><i class="uil uil-comment-question"></i></span>
                <h3>Inquiries</h3>
            </a>
            <a asp-controller="User" asp-action="UserBookmarks" class="inq-sidebar-item">
                <span><i class="uil uil-notebooks"></i></span>
                <h3>Bookmarks</h3>
            </a>
        </div>
        <div class="inq-left-button"><button>ASK QUESTION</button></div>
    </div>

    <!--==================MIDDLE SIDE=======================-->
    <div class="inq-user-middle-container">
        <!------------------ HOMEPAGE -------------->
        <div class="middle-inquiries-text">
            <p>INQUIRIES</p>
        </div>

        <!----------- START OF POSTS----------->
        @foreach (var post in Model.UserPosts.OrderByDescending(p => p.CreatedAt))
        {

            if(post.IsInquiry == true){
                <div class="middle-homepage-post">
                    <div class="user-detail">
                        @* <div class="profile-photo">
                <img src="@post.ProfilePhoto" />
                </div> *@
                        <div class="user-info">
                            <p class="name">@post.Name</p>
                            <p class="username">@post.Username</p>
                        </div>
                    </div>
                    <div class="user-post">
                        <p>@post.PostContent</p>
                    </div>

                </div>
            }
            
        }

   

    <!-----------------END OF POSTS---------------->
    <!-- END OF POSTS-->
    <div class="middle-end-post">
        <p>You've reached the end. Wait for new posts.</p>
    </div>
</div>
    <!--==================RIGHT SIDE=======================-->
        <div class="inq-user-right-container">
            @if (Model.QOTD != null)
            {
                <div class="inq-quote-text"><p>Quote of the Day</p></div>
                <div class="inq-quote-content">
                    <p>
                        @Model.QOTD.QuoteOftheDay
                    </p>
                </div>
            }
            else
            {
                <div class="inq-quote-text"><p>No Quote of the Day available</p></div>
            }
        </div>
       
    </div>


    <!--END OF RIGHT SIDE-->
</div>
<!-- END OF MAIN CONTAINER-->